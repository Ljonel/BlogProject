<div class="admin-edit-container">
    <form asp-controller="Authentication" asp-action="Login" method="post" class="admin-edit-form">
        <div class="form-center">
            <div>
                <input asp-for="UserName" placeholder="Username" />
                <span asp-validation-for="@Model.UserName" class="error-validation"></span>
            </div>
            <div>
                <input asp-for="Password" placeholder="Password" />
                <span asp-validation-for="Password" class="error-validation"></span>
            </div>
            <input type="submit" value="Sign In" class="admin-edit-button" />
            <a type="button" class="register-button" asp-controller="Authentication" asp-action="Register" value="Register">Register</a>
        </div>
    </form>
    </div>