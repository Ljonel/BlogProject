@{
}
<div class="admin-edit-container">
    <form asp-controller="Authentication" asp-action="Register" method="post" class="admin-edit-form">
        <div class="form-center">
            <div>
                <input asp-for="UserName" placeholder="Username" />
                <span asp-validation-for="UserName" class="error-validation"></span>
            </div>
            <div>
                <input asp-for="Email" placeholder="Email" />
                <span asp-validation-for="Email" class="error-validation"></span>
            </div>
            <div>
                <input asp-for="Password" placeholder="Password" />
                <span asp-validation-for="Password" class="error-validation"></span>
            </div>
            <div>
                <input asp-for="ConfirmPassword" placeholder="Confirm password" />
                <span asp-validation-for="ConfirmPassword" class="error-validation"></span>

            </div>
            <input type="submit" value="Sign Up" class="admin-edit-button" />
        </div>
    </form>
</div>